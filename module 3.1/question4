#include<stdio.h>
//#include<conio.h>
int main(){
    int principal,time;
    float rate,interest;
    printf("enter the value of principal");
    scanf("%d",&principal);
    printf("\nenter the rate:");
    scanf("%f",&rate);
    printf("\nenter the time:");
    scanf("%d",&time);
    interest= principal*rate*time/100;
    printf("The interest is : %f",interest);
    return 0;
}
